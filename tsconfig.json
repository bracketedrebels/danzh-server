    "baseUrl": "./src",
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["./src/**/*"]
}
